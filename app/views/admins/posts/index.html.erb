<%= provide(:page_title, 'My Posts') %>
<div class="container post-admin-container">
  <table class="table table-hover">
    <thead class="thead">
      <tr>
        <th class="table-header" colspan="5">post titles.</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, admins_post_path(post) %></td>
        <td></td>
        <% if post.published? %>
          <td><%= link_to 'Unpublish', unpublish_admins_post_path(post), method: :put, class: 'btn btn-sm btn-outline-primary' %></td>
        <% else %>
          <td><%= link_to 'Publish', publish_admins_post_path(post), method: :put, class: 'btn btn-sm btn-outline-success' %></td>
        <% end %>
        <td><%= link_to 'Edit', edit_admins_post_path(post), class: 'btn btn-sm btn-outline-warning' %></td>
        <td><%= link_to 'Delete', admins_post_path(post), method: :delete, class: 'btn btn-sm btn-outline-danger' %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <div class="new-post-button-div">
    <%= link_to new_admins_post_path, class: 'btn btn-sm btn-outline-primary' do %>
      New Post
    <% end %>
  </div>
</div>
