<% provide(:page_title, @post.title) %>

<div class="container">
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10 text-center">
      <div class="post-title">
        <h2><%= @post.title %></h2>
      </div>
      <div class="post-content">
        <p>
          <%= @post.content.html_safe %>
        </p>
        <div class="post-info">
          <p><%= @post.display_day_published %></p>
        </div>
      </div>
    </div>
  </div>
</div>
