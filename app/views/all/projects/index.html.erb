<%= provide(:page_title, 'All Projects') %>
<%= provide(:projects_active, 'active') %>

<div class="container">
  <% @projects.each do |f| %>
  <div class="row">
    <div class="col s12 m10 offset-m1">
      <%= link_to f do %>
      <div class="project-card">
        <div class="project-card-content">
          <div class="card-body">
            <h4 class="card-title"><%= f.title %></h4>
            <p class="card-text"><%= truncate(f.content, length: 130) %></p>
          </div>
        </div>
        <div class="project-card-image">
          <img class="card-image-left" src='<%= f.card_image_url %>'>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  <% end %>
</div>
