<%= provide(:page_title, 'All Projects') %>
<%= provide(:projects_active, 'active') %>

<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-3">projects.</h1>
    <p class="lead">keep up to date on all the cool projects I am working on.</p>
  </div>
</div>

<div class="container">
  <% @projects.each do |f| %>
  <div class="col-md-12">
    <div class="row row-eq-height">
        <div class="project-card">
          <div class="col-md-3 float-left">
            <h4><%= f.title %></h4>
            <img src='<%= f.card_image_url %>'>
          </div>
          <div class="col-md-9 float-right project-card-content">
            <div class="project-content-text">
              <p><%= truncate(f.content, length: 500) %></p>
            </div>
            <div class="project-dates-text">
              <p>Project began on <%= f.start_date %>, and is projected to end at <%= f.projected_end_date %></p>
            </div>
            <div class="project-percent-complete-text">
              <p><%= f.percent_complete %>% Complete</p>
            </div>
            <div class="project-view-more">

            </div>
          </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
